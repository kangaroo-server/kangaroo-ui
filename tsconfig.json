{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@angular/*": [
        "../../../node_modules/@angular/*"
      ],
      "@kangaroo/*": [
        "../../../node_modules/@kangaroo/*"
      ],
      "@clr/*": [
        "../../../node_modules/@clr/*"
      ],
      "rxjs": [
        "../../../node_modules/rxjs"
      ]
    }
  }
}
