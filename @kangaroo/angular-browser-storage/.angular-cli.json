{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "@kangaroo/angular-browser-storage"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "lib",
      "assets": [],
      "index": "index.html",
      "main": "index.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.lib.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [],
      "scripts": []
    }
  ],
  "lint": [
    {
      "project": "src/tsconfig.lib.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "codeCoverage": {
      "exclude": [
        "../angular-logger/**/*"
      ]
    },
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}
